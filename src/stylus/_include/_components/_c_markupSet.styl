.l-markupBlock
	.p-markupBtn
		cursor pointer
		display table
		margin-bottom 10px
		padding 5px
		fontSize(11)
		font-weight bold
		line-height 1.0
		&.pug
			background-color #e0f0f0
			&+.source
				padding 10px 15px
				background-color #e0f0f0
		&.stylus
			background-color #f0e0f0
			&+.source
				padding 20px 15px
				background-color #f0e0f0

	.source
		display none
		marginBottom(10)
		fontSize(11)

.l-markupBox
	marginBottom(30)

.p-markupTitle
	display table
	marginBottom(10)
	padding 5px
	color #fff
	background-color #000
	fontSize(10)
	line-height 1.0